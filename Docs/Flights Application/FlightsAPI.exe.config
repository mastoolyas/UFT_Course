<?xml version="1.0" encoding="utf-8" ?>
<configuration>

  <appSettings>
    <add key="Port" value="8000"/>
    <add key="ClientSettingsProvider.ServiceUri" value=""/>
    <add key="HelpHtmlFile" value=".\Help\index.html"/>
    <add key="WadlFilePath" value=".\Help\FlightService.wadl"/>
    <add key="SwaggerFilePath" value=".\Help\FlightService_swagger.json"/>
    <add key="soap_link_str" value="http://localhost:{0}/Flights_SOAP"/>
    <add key="rest_link_str" value="http://localhost:{0}/Flights_REST"/>
    <add key="wadl_link_str" value="http://localhost:{0}/Flights_REST/FlightService.wadl"/>
    <add key="swagger_link_str" value="http://localhost:{0}/Flights_REST/FlightService_swagger.json"/>
  </appSettings>
  <connectionStrings>
    <add name="dbConnection" connectionString=".\DB\Flights.s3db"/>
  </connectionStrings>
  <system.serviceModel>
    <!-- bindings -->
    <bindings>
      <basicHttpBinding>
        <binding name="soapBinding">
          <security mode="None">
          </security>
        </binding>
      </basicHttpBinding>
      <webHttpBinding>
        <binding name="webBinding">
        </binding>
      </webHttpBinding>
    </bindings>
    <behaviors>
      <endpointBehaviors>
        <behavior name="NewBehavior"/>
        <!-- plain old XML -->
        <behavior name="REST">
          <webHttp automaticFormatSelectionEnabled="true"/>
        </behavior>
      </endpointBehaviors>
      <serviceBehaviors>
        <behavior name="NewBehavior1">
          <serviceMetadata httpGetEnabled="true"/>
          <serviceDebug includeExceptionDetailInFaults="true"/>
        </behavior>
      </serviceBehaviors>
    </behaviors>
    <services>
      <service behaviorConfiguration="NewBehavior1" name="FlightsServiceLib.Flights_Service">
        <clear />
        <endpoint address="" binding="basicHttpBinding" name="FlightsServiceMethods"
          bindingNamespace="HP.SOAQ.SampleApp" contract="FlightsServiceLib.IFlightsSoapService"
          listenUriMode="Explicit" />
      </service>
      <service behaviorConfiguration="NewBehavior1" name="FlightsServiceLib.FlightsRestService">
        <clear />
        <endpoint address="" behaviorConfiguration="REST" binding="webHttpBinding"
          bindingConfiguration="webBinding" contract="FlightsServiceLib.IFlightsRestService" />
      </service>
    </services>
    <standardEndpoints>
      <webHttpEndpoint>
        <standardEndpoint name="FlightsServiceMethods" contentTypeMapper="FlightsServiceLib.CustomWebContentTypeMapper" />
      </webHttpEndpoint>
    </standardEndpoints>
  </system.serviceModel>
  <system.web>
    <membership defaultProvider="ClientAuthenticationMembershipProvider">
      <providers>
        <add name="ClientAuthenticationMembershipProvider" type="System.Web.ClientServices.Providers.ClientFormsAuthenticationMembershipProvider, System.Web.Extensions, Version=3.5.0.0, Culture=neutral, PublicKeyToken=31bf3856ad364e35" serviceUri=""/>
      </providers>
    </membership>
    <roleManager defaultProvider="ClientRoleProvider" enabled="true">
      <providers>
        <add name="ClientRoleProvider" type="System.Web.ClientServices.Providers.ClientRoleProvider, System.Web.Extensions, Version=3.5.0.0, Culture=neutral, PublicKeyToken=31bf3856ad364e35" serviceUri="" cacheTimeout="86400"/>
      </providers>
    </roleManager>
  </system.web>
  
  
    <startup useLegacyV2RuntimeActivationPolicy="true"> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
    </startup>
</configuration>